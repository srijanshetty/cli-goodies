#
# Upgrade everything
#
# Authors:
#   transfer.sh
#

ORIG=$PWD

# Linux updates
sudo apt-get update && sudo apt-get -y upgrade

# upgrade mr
cd ~ && mr up

# dotfiles updates
cd $CUSTOM_ROOT && pip install --upgrade peru

# Upgrade github repos
cd $GITHUB_ROOT && mr up

# Update installers
pip install --upgrade pip

# Reset completions
rm -f ~/.zcompdump; compinit

# Go back to original folder
cd $ORIG
