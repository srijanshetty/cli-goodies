#
# Upgrade everything
#
# Authors:
#   Srijan R. Shetty
#

ORIG=$PWD

# Linux updates
if hash apt &> /dev/null; then
    sudo apt -qq update && sudo apt-get -y upgrade
    sudo snap refresh
fi

# Upgrade brew
# if hash brew &> /dev/null; then
#     brew update
# fi

# upgrade mr
cd ~ && mr up

# Update installers
pip install --upgrade pip
npm install -g npm

# Reset completions
rm -f ~/.zcompdump; compinit

# Update vim
vim '+PlugUpdate|q|q'
nvim '+PlugUpdate|q|q'
vim '+CocUpdate|q|q'
nvim '+CocUpdate|q|q'

# Upgrade github repos
cd $GITHUB_ROOT && mr up

# Update private funcs
if hash private-upgrade &> /dev/null; then
    private-upgrade
fi

# Go back to original folder
cd $ORIG
